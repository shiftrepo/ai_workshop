# Docker Hub Ready Environment Variables for Log Collector Tool
# Copy this file to .env and configure for your environment

# Docker Image Configuration
DOCKER_IMAGE=log-collector-tool:latest

# SSH Configuration
SSH_USER=logcollector
SSH_PORT_1=5001
SSH_PORT_2=5002
SSH_PORT_3=5003

# Log Generation Configuration
CONTINUOUS_LOGS=true
LOG_INTERVAL=30

# Client Configuration (for testing)
LOG_CLIENT_HOST_1=log-server1
LOG_CLIENT_HOST_2=log-server2
LOG_CLIENT_HOST_3=log-server3

# Production Configuration (override for production use)
# SSH_HOST_1=production-server1.example.com
# SSH_HOST_2=production-server2.example.com
# SSH_HOST_3=production-server3.example.com
# SSH_KEY_PATH=/path/to/production/ssh/key
